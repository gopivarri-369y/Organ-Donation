<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Matching Owners</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        h1 {
            text-align: center;
        }
    </style>
</head>
<body>
    <h1>Matching Owners for College: <%= owners.length > 0 ? owners[0].collage : 'N/A' %></h1>

    <% if (owners.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Hostel</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Rooms For</th>
                    <th>2 Share Rent</th>
                    <th>3 Share Rent</th>
                    <th>4 Share Rent</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% owners.forEach(owner => { %>
                    <tr>
                        <td><%= owner.firstname %></td>
                        <td><%= owner.lastname %></td>
                        <td><%= owner.hostel %></td>
                        <td><%= owner.phone %></td>
                        <td><%= owner.email %></td>
                        <td><%= owner.roomsFor %></td>
                        <td>$<%= owner.rent2Share %></td>
                        <td>$<%= owner.rent3Share %></td>
                        <td>$<%= owner.rent4Share %></td>
                        <td>
                            <form action="/send-email" method="POST">
                                <input type="hidden" name="ownerEmail" value="<%= owner.email %>">
                                <input type="hidden" name="ownerName" value="<%= owner.firstname %>">
                                <input type="submit" value="Send Email">
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>No owners found for this college.</p>
    <% } %>
</body>
</html>
